        function handleSearch(query, resultsContainerId) {
            const container = document.getElementById(resultsContainerId);
            const list = container.querySelector('.search-suggestions-list');
            if(query.length < 1) {
                container.classList.add('hidden');
                return;
            }
            
            // Filter data (case insensitive)
            const filtered = allSearchData.filter(item => item.title.toLowerCase().includes(query.toLowerCase()));
            
            // Limit to 7 items as requested
            const limitedResults = filtered.slice(0, 7);
            
            // Build HTML
            if(limitedResults.length > 0) {
                list.innerHTML = limitedResults.map(item => `
                    <div class="flex gap-3 p-3 hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer transition-colors border-b border-gray-100 dark:border-gray-800 last:border-0">
                        <img src="${item.img}" alt="${item.title}" class="w-10 h-14 object-cover rounded shadow-sm flex-shrink-0">
                        <div class="flex flex-col justify-center">
