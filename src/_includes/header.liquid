        if (input) {
            // Preload search data when user hovers over search input
            input.addEventListener('mouseenter', () => {
                if (!searchManager.isLiteLoaded) {
                    searchManager.loadLiteData();
                }
            });
            
            input.addEventListener('touchstart', () => {
                if (!searchManager.isLiteLoaded) {
                    searchManager.loadLiteData();
                }
            }, { passive: true });
        }
    });
}

// Close search results when clicking outside
document.addEventListener('click', function(event) {
    // Check desktop search
    const desktopSearch = document.getElementById('desktop-search-results');
    const desktopInput = document.getElementById('desktop-search-input');
    const desktopContainer = document.querySelector('.search-container');
    
    if (desktopSearch && desktopInput && desktopContainer) {
        if (!desktopContainer.contains(event.target)) {
            desktopSearch.classList.add('hidden');
        }
    }
    
    // Check mobile search
    const mobileSearch = document.getElementById('mobile-search-results');
    const mobileInput = document.getElementById('mobile-search-input');
    const mobileContainer = document.querySelector('.mobile-search-container');
    const mobileSearchBar = document.getElementById('mobile-search-bar');
    
    if (mobileSearch && mobileInput && mobileContainer) {
        // If clicking outside the search container and not on the search toggle button
        if (!mobileContainer.contains(event.target) && 
            !event.target.closest('button[onclick="toggleMobileSearch()"]')) {
            mobileSearch.classList.add('hidden');
        }
    }
});

