// ============================================
// SEARCH INTERFACE CLASS
// ============================================
class SearchInterface {
    constructor(type) {
        this.type = type;
        this.inputId = `${type}-search-input`;
        this.resultsListId = `${type}-search-results-list`;
        this.resultsContainerId = `${type}-search-results`;
        this.viewAllButtonId = `${type}-view-all-results`;
        this.isActive = false;
        this.lastQuery = '';
    }

    init() {
        const input = document.getElementById(this.inputId);
        const resultsList = document.getElementById(this.resultsListId);
        const resultsContainer = document.getElementById(this.resultsContainerId);
        const viewAllButton = document.getElementById(this.viewAllButtonId);

        if (!input || !resultsList || !resultsContainer || !viewAllButton) return;

        // Input event with debouncing
        input.addEventListener('input', this.debounce((e) => {
            this.handleInput(e.target.value);
        }, 300));

        // Enter key to go to search page
        input.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.handleEnterKey(input.value);
            }
        });

        // Focus events
        input.addEventListener('focus', () => {
            this.isActive = true;
            // If there's a previous query, show results
            if (input.value.trim()) {
                this.handleInput(input.value);
            }
        });

        input.addEventListener('blur', () => {
            this.isActive = false;
        });

        // View all results button
        viewAllButton.addEventListener('click', () => {
            this.handleViewAll(input.value);
        });

        // Store references
        this.input = input;
        this.resultsList = resultsList;
        this.resultsContainer = resultsContainer;
        this.viewAllButton = viewAllButton;
    }

    debounce(func, wait) {
        let timeout;
        return (...args) => {
            clearTimeout(timeout);
            timeout = setTimeout(() => func.apply(this, args), wait);
        };
    }

    async handleInput(query) {
        query = query.trim();
        this.lastQuery = query;
        
        if (!query || query.length < 1) {
            this.hideResults();
            return;
        }

        // Show loading state
        this.showLoading();

        try {
            const results = await searchManager.searchDropdown(query, 5);
            this.displayResults(results, query);
        } catch (error) {
            console.error('Search failed:', error);
            this.showError(query);
        }
    }

    handleEnterKey(query) {
        query = query.trim();
        if (query) {
            window.location.href = `/search/?q=${encodeURIComponent(query)}`;
        }
    }

    handleViewAll(query) {
        query = query.trim();
        if (query) {
            window.location.href = `/search/?q=${encodeURIComponent(query)}`;
        }
    }

    showLoading() {
        this.resultsList.innerHTML = `
            <div class="p-4 text-center">
                <div class="inline-block animate-spin rounded-full h-6 w-6 border-t-2 border-b-2 border-primary"></div>
                <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Searching...</p>
            </div>
        `;
        this.showResults();
    }

    displayResults(results, query) {
        if (results.length > 0) {
            let html = '';
            results.forEach(item => {
                const typeClass = this.getTypeClass(item.type);
                const genres = Array.isArray(item.genres) ? item.genres.slice(0, 2).join(', ') : '';
                
                html += `
                    <a href="${item.url}" class="flex gap-3 p-3 hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer transition-colors border-b border-gray-100 dark:border-gray-800 last:border-0 group/item">
                        <img src="${item.posterUrl}" alt="${item.title}" 
                             class="w-10 h-14 object-cover rounded shadow-sm flex-shrink-0"
                             loading="lazy"
                             onerror="this.src='data:image/svg+xml;base64,'">
                        <div class="flex flex-col justify-center flex-1 min-w-0">
                            <h4 class="text-sm font-semibold text-gray-900 dark:text-white truncate group-hover/item:text-primary mb-1">
                                ${this.highlightText(item.title, query)}
                            </h4>
                            <div class="text-xs text-gray-500 dark:text-gray-400 flex items-center gap-2">
                                <span>${item.airedYear || ''}</span>
                                <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
                                <span class="px-1 py-0.5 ${typeClass} text-white text-[10px] rounded">${item.type || 'Show'}</span>
                                ${genres ? `<span class="w-1 h-1 bg-gray-400 rounded-full"></span><span class="truncate">${genres}</span>` : ''}
                            </div>
                        </div>
                    </a>
                `;
            });
            
            this.resultsList.innerHTML = html;
            this.viewAllButton.textContent = `View all results (${results.length})`;
            this.showResults();
        } else {
            this.resultsList.innerHTML = `
                <div class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
                    No results found for "${query}"
                    <p class="text-xs mt-1">Try different keywords</p>
                </div>
            `;
            this.showResults();
        }
    }

    showError(query) {
        this.resultsList.innerHTML = `
            <div class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
                Search temporarily unavailable
                <p class="text-xs mt-1">Try again in a moment</p>
            </div>
        `;
        this.showResults();
    }

    showResults() {
        this.resultsContainer.classList.remove('hidden');
        this.resultsContainer.style.visibility = 'visible';
        this.resultsContainer.style.opacity = '1';
    }

    hideResults() {
        this.resultsContainer.classList.add('hidden');
    }

    getTypeClass(type) {
        switch((type || '').toLowerCase()) {
            case 'anime': return 'bg-purple-500';
            case 'movie': return 'bg-blue-500';
            case 'series': return 'bg-green-500';
            default: return 'bg-gray-500';
        }
    }

    highlightText(text, query) {
        if (!query || !text) return text;
        const regex = new RegExp(`(${query.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
        return text.replace(regex, '<span class="text-primary font-bold">$1</span>');
    }
}

