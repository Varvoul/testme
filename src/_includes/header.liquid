// Keep old function for compatibility with existing code
window.handleSearch = function(query, resultsContainerId) {
    const container = document.getElementById(resultsContainerId);
    if (!container) return;
    
    const list = container.querySelector('.search-suggestions-list');
    const viewAllButton = container.querySelector('button');
    
    if (!query || query.trim().length < 1) {
        container.classList.add('hidden');
        return;
    }
    
    // Use new search manager
    searchManager.searchDropdown(query, 7).then(results => {
        if (results.length > 0) {
            let html = '';
            results.forEach(item => {
                html += `
                    <a href="${item.url}" class="flex gap-3 p-3 hover:bg-gray-100 dark:hover:bg-gray-800 cursor-pointer transition-colors border-b border-gray-100 dark:border-gray-800 last:border-0">
                        <img src="${item.posterUrl}" alt="${item.title}" class="w-10 h-14 object-cover rounded shadow-sm flex-shrink-0">
                        <div class="flex flex-col justify-center">
                            <h4 class="text-sm font-semibold text-gray-900 dark:text-white leading-tight mb-1">${item.title}</h4>
                            <div class="text-xs text-gray-500 dark:text-gray-400 flex items-center gap-2">
                                <span>${item.airedYear}</span>
                                <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
                                <span>${item.type}</span>
                                <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
                                <span>${Array.isArray(item.genres) ? item.genres[0] : item.category || ''}</span>
                            </div>
                        </div>
                    </a>
                `;
            });
            
            list.innerHTML = html;
            
            if (viewAllButton) {
                viewAllButton.textContent = `View all results (${results.length})`;
                viewAllButton.onclick = function() {
                    window.location.href = `/search/?q=${encodeURIComponent(query)}`;
                };
            }
            
            container.classList.remove('hidden');
        } else {
            list.innerHTML = `
                <div class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
                    No results found for "${query}"
                </div>
            `;
            container.classList.remove('hidden');
        }
    }).catch(error => {
        console.error('Search failed:', error);
        list.innerHTML = `
            <div class="p-4 text-center text-sm text-gray-500 dark:text-gray-400">
                Search temporarily unavailable
            </div>
        `;
        container.classList.remove('hidden');
    });
};

// Initialize when DOM is ready (alternative to DOMContentLoaded)
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
        // Already handled above, but keep for safety
    });
} else {
    // DOM already loaded
    searchManager.loadLiteData();
}
