// ============================================
// MODERN SEARCH MANAGER (NEW IMPLEMENTATION)
// ============================================
class SearchManager {
    constructor() {
        this.liteData = [];
        this.fullData = [];
        this.cache = new Map();
        this.isLiteLoaded = false;
        this.isFullLoaded = false;
        this.debounceTimers = {};
        this.searchControllers = new Map(); // For aborting previous searches
    }

    // Load lite data for dropdowns (optimized)
    async loadLiteData() {
        if (this.isLiteLoaded) return;
        
        try {
            // Try to fetch from search-index.json with lite mode
            const response = await fetch('/search-index.json?mode=lite');
            if (!response.ok) {
                // Fallback to regular search-index.json
                const fallbackResponse = await fetch('/search-index.json');
                const data = await fallbackResponse.json();
                this.liteData = data.posts || [];
            } else {
                const data = await response.json();
                this.liteData = data.posts || [];
            }
            
            // Prepare data for search
            this.liteData = this.liteData.map(item => ({
                ...item,
                searchLower: `${item.title} ${item.searchableTitle || ''} ${item.genres ? item.genres.join(' ') : ''}`.toLowerCase(),
                url: item.url || `/show/${item.slug}/`
            }));
            
            this.isLiteLoaded = true;
            console.log(`✓ Loaded ${this.liteData.length} items for dropdown search`);
        } catch (error) {
            console.error('Error loading search data:', error);
            this.loadFallbackData();
        }
    }

    // Load fallback data from inline script
    loadFallbackData() {
        if (window.allSearchData && window.allSearchData.length > 0) {
            this.liteData = window.allSearchData.map(item => ({
                ...item,
                searchLower: `${item.title} ${item.searchableTitle || ''}`.toLowerCase(),
                url: item.url || `/show/${item.slug}/`
            }));
            this.isLiteLoaded = true;
            console.log(`✓ Loaded ${this.liteData.length} fallback search items`);
        }
    }

    // Search function with debouncing and abort control
    async searchDropdown(query, limit = 5) {
        query = query.toLowerCase().trim();
        if (!query || query.length < 2) return [];
        
        // Check cache first
        const cacheKey = `dropdown_${query}_${limit}`;
        if (this.cache.has(cacheKey)) {
            return this.cache.get(cacheKey);
        }
        
        // Cancel previous search if still running
        if (this.searchControllers.has('dropdown')) {
            this.searchControllers.get('dropdown').abort();
        }
        
        // Create new abort controller
        const controller = new AbortController();
        this.searchControllers.set('dropdown', controller);
        
        try {
            // Wait for data to be loaded if not already
            if (!this.isLiteLoaded) {
                await this.loadLiteData();
            }
            
            // If still no data, return empty
            if (this.liteData.length === 0) return [];
            
            // Simple but effective search algorithm
            const results = this.liteData.filter(item => {
                return item.searchLower.includes(query);
            })
            .sort((a, b) => {
                // Prioritize exact title matches
                const aExact = a.title.toLowerCase() === query;
                const bExact = b.title.toLowerCase() === query;
                if (aExact && !bExact) return -1;
                if (!aExact && bExact) return 1;
                
                // Then by searchable title matches
                const aTitleMatch = a.title.toLowerCase().includes(query);
                const bTitleMatch = b.title.toLowerCase().includes(query);
                if (aTitleMatch && !bTitleMatch) return -1;
                if (!aTitleMatch && bTitleMatch) return 1;
                
                // Then by popularity/rating
                return (b.popularity || b.rating || 0) - (a.popularity || a.rating || 0);
            })
            .slice(0, limit);
            
            // Cache results for 2 minutes
            this.cache.set(cacheKey, results);
            setTimeout(() => this.cache.delete(cacheKey), 2 * 60 * 1000);
            
            return results;
        } catch (error) {
            if (error.name === 'AbortError') {
                console.log('Search was aborted');
                return [];
            }
            console.error('Search error:', error);
            return [];
        }
    }

    // Clear old cache entries
    clearOldCache() {
        // Keep cache size reasonable
        if (this.cache.size > 50) {
            const keys = Array.from(this.cache.keys());
            for (let i = 0; i < 20; i++) {
                this.cache.delete(keys[i]);
            }
        }
    }
}

