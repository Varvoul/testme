        const currentSeasonData = showData.seasons.find(s => s.seasonNumber == currentSeason);
        const episodes = currentSeasonData ? currentSeasonData.episodes : [];
        const currentIndex = episodes.findIndex(ep => ep.number === currentEpisode);
        
        if (direction === 'next' && currentIndex < episodes.length - 1) {
            currentEpisode = episodes[currentIndex + 1].number;
        } else if (direction === 'prev' && currentIndex > 0) {
            currentEpisode = episodes[currentIndex - 1].number;
        }
        
        updateUI();
        updateMobileDisplay();
        renderEpisodeLists();
        
