        const episodes = currentSeasonData ? currentSeasonData.episodes : [];
        
        // Check if episode exists
        if (currentEpisode > episodes.length) {
            currentEpisode = 1;
        }
        
        // Get the current episode
        const episode = episodes.find(e => e.number === currentEpisode);
        if (!episode) return;
        
        // Get server type and name
        const serverType = currentServer.split('-')[0]; // SUB, DUB, or RAW
        const serverName = currentServer.split('-').slice(1).join('-'); // HD-01, etc.
        
        // Find the server URL
        let videoUrl = '';
        const servers = episode.servers[serverType.toLowerCase()];
        if (servers) {
            const server = servers.find(s => s.name === serverName);
            if (server) {
                videoUrl = server.url;
            } else if (servers.length > 0) {
                videoUrl = servers[0].url;
            }
        }
        
        if (!videoUrl) return;
        
        // Add autoplay parameter
        const embedUrl = videoUrl.includes('?') ? 
            `${videoUrl}&autoplay=1&controls=1` : 
            `${videoUrl}?autoplay=1&controls=1`;
        
        // Clear container and add iframe
        container.innerHTML = '';
        const iframe = document.createElement('iframe');
        iframe.className = 'video-container';
        iframe.src = embedUrl;
        iframe.frameBorder = '0';
        iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
        iframe.allowFullscreen = true;
        iframe.title = `${showData.title} - Season ${currentSeason} Episode ${currentEpisode}`;
